<table class="table table-striped table-bordered dataTable">
	<thead>
		<tr>
			<th>Type</th>
			<th>Description</th>
			<th>Mfg.</th>
			<th>Serial #</th>
			<th>Action</th>
		</tr>
	</thead>
	<tbody>
		<% @assets.each do |asset| %>
		<tr>
			<td><%= asset.asset_type.name %></td>
			<td><%= asset.description %></td>
			<td><%= asset.manufacturer %></td>
			<td><%= asset.serial_number %></td>
			<td>
				<%= link_to raw('<i class="icon-pencil"></i>'), asset %>
				<%= link_to raw('<i class="icon-edit"></i>'), edit_asset_path(asset)%>
				<%= link_to raw('<i class="icon-trash"></i>'), asset, method: :delete, data: { confirm: 'Are you sure?' } %>
			</td>
		</tr>
		<% end %>
	</tbody>
</table>

<%= link_to 'New Asset', new_asset_path %>
